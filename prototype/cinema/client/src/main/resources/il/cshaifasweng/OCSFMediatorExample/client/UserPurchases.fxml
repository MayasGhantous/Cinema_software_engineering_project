<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="615.0" prefWidth="781.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.UserPurchasesController">
    <children>
        <TableView fx:id="table_view" prefHeight="200.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="200.0">
            <columns>
                <TableColumn fx:id="auto_number_purchase" text="purchase ID" />
            <TableColumn fx:id="movie_name_column" prefWidth="75.0" text="Movie name" />
                <TableColumn fx:id="seats_column" prefWidth="63.0" text="seats" />
                <TableColumn fx:id="link_column" minWidth="2.5" prefWidth="52.0" text="link" />
                <TableColumn fx:id="date_screening_column" prefWidth="139.0" text="Screening time" />
                <TableColumn fx:id="payment_amount_column" prefWidth="115.0" text="price" />
                <TableColumn fx:id="date_column" minWidth="7.5" prefWidth="140.0" text="purchase_date" />
            <TableColumn fx:id="payment_type_column" prefWidth="91.0" text="payment type" />
            </columns>
        </TableView>
        <Button fx:id="delete_movie" onAction="#CancelPurchase" text="Cancel Purchase" textFill="#b71f1f" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="150.0">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
        <TextArea fx:id="purchase_detailed_text" editable="false" layoutX="24.0" layoutY="18.0" prefHeight="134.0" prefWidth="344.0" promptText="purchase information " />
      <Text fx:id="ErrorMessage" fill="RED" layoutX="391.0" layoutY="58.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="356.0" />
      <Text fx:id="WarningMessage" fill="RED" layoutX="411.0" layoutY="112.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="344.0" />
    </children>
</AnchorPane>
